<div class="row">
  <div class="col-lg-12">
    <h1>My Trips</h1>
  </div>
</div>
<hr>
<div class="row">
  <% @trips.each do |trip| %>
    <%= link_to trip_path(trip) do %>
      <div class="static-map col-md-4">
        <img class="img-responsive" src="https://maps.googleapis.com/maps/api/staticmap?center=<%= trip.latitude %>,<%= trip.longitude%>&zoom=<%= trip.zoom %>&size=600x300&maptype=terrain&path=geodesic:true|<%=static_path(trip)%>&key=<%=ENV['STATIC_MAPS_KEY']%>">
        <div>
          <h4 id="trip-list-text"><%= trip.name %></h4>
          <ul class="style-ul">
            <!-- needs different details here -->
            <!-- <% trip.markers.each do |marker| %>
              <li><%= marker.note %></li>
            <% end %> -->
          </ul>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
